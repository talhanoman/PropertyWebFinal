@model PropertyWebApp.Models.UserProfile

@{
    ViewData["Title"] = "User Profile";
}

<h1 class="text-center text-theme">User Profile</h1>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Profile Picture:</dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-fluid" />
        </dd>
    </dl>

    <div class="text-center">
        <a asp-action="Edit" class="btn btn-primary btn-theme">Edit Profile</a>
    </div>
</div>
